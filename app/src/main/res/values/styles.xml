<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="bgColor">#000000</item>
    </style>

    <style name="LightThemeBar" parent="Theme.AppCompat.Light">
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
        <item name="closeEnough">#e5e4e2</item>
        <item name="inBetween">#A3A2A1</item>
        <item name="actionOverflowButtonStyle">@style/DotsTheme</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">#000000</item>
        <item name="android:itemBackground">#ffffff</item>
    </style>

    <style name="DarkThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="bgColor">#000000</item>
        <item name="closeEnough">#242124</item>
        <item name="inBetween">#696969</item>
        <item name="actionOverflowButtonStyle">@style/DotsTheme</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:itemBackground">#000000</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
    </style>

    <style name="DotsTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/textColor</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">?attr/bgColor</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/blue_title</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/copperplate</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/textColor</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="android:background">?attr/closeEnough</item>
    </style>

    <style name="ListViewStyle" parent="android:style/Widget.AbsListView">
        <item name="background">?attr/bgColor</item>
        <item name="android:divider">?attr/metaTextColor</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

</resources>